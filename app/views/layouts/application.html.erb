    <body>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
          <div class="container">
            <%= link_to "99cats", '/', id: "logo" %>
            <nav>
              <ul class="nav pull-right">
                <li><%= link_to "Home",    '/' %></li>
                <li><%= link_to "Rentable Cats",    '/cats/' %></li>
                <li><%= link_to "Help",    '/help/' %></li>
                <li><%= link_to "Sign in", '/' %></li>
              </ul>
            </nav>
          </div>
        </div>
      </header>
      <div class="container">
        <%= yield %>
        <footer class="footer">
          <small>
            <a href="http://railstutorial.org/">99cats</a>
            by Lots o Cats Inc.
          </small>
          <nav>
            <ul>
              <li><%= link_to "Help",   '/help/' %></li>
              <li><%= link_to "Legal",   '/' %></li>
              <li><%= link_to "Contact", '/' %></li>
              <li><%= link_to "Issues",   'https://github.com/jclif/ninety-nine-cats/issues' %></li>
            </ul>
          </nav>
        </footer>
      </div>
